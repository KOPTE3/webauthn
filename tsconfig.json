{
  "compilerOptions": {
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ],

    "types": [
      "request",
      "request-promise-native",
      "ts-simple-ast",
      "wdio-yoda-allure-utils-service",
      "wdio-yoda-api-service"
    ],

    "lib": [
      "es2018",
      "dom"
    ],

    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "strictPropertyInitialization": false,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": false
  },

  "exclude": [
    "./node_modules",
    "./files",
    "./cache",
    "./build",
    "**/*.gen.ts",
    "**/*.gen.d.ts"
  ]
}
